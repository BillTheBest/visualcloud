<div id="container" style="display:none;z-index: 999;">
  <div id="ajax-template" style="padding:0px;">
    <a class="ui-notify-cross ui-notify-close" href="#">x</a>
    <h1>#{title}</h1>
    <p>#{text}</p>
  </div>
  <div id="basic-template" class="ui-state-success alert-success">
    <a class="ui-notify-cross ui-notify-close" href="#">x</a>
    <h1>#{title}</h1>
    <p>#{text}</p>
  </div>
  <div id="themeroller" class="ui-state-error" style="padding:10px; -moz-box-shadow:0 0 6px #980000; -webkit-box-shadow:0 0 6px #980000; box-shadow:0 0 6px #980000;">
    <a class="ui-notify-cross ui-notify-close" href="#">x</a>
    <span style="float:left; margin:0 5px 0 0;" class="ui-icon ui-icon-alert"></span>
    <h1>#{title}</h1>
    <p>#{text}</p>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
   var flash = '<%=(flash[:notice].present? || flash[:success].present?) ? "notice" : "error"%>';
   var content = '<%=(flash[:notice].present? || flash[:success].present?) ? (flash[:notice] || flash[:success]) : flash[:error]%>';
   if(flash == "error" && content=="")
     content = "Entered email or password are wrong."
   <% if flash.present? %>
      showFlashMessages($('#container'), flash, content)
   <%end%>
});
</script>