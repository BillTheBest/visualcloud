<!-- Save Environment -->
<%= render 'save_environment', key_pairs: @key_pairs, security_groups: @security_groups, project: project %>

<% ResourceType.find_all_by_resource_class('EC2').each do |resource_type|  %>
  <%= render 'ec2_type_resource_configuration', resource_type: resource_type %>
<% end %>

<!-- RDS resource  -->
<%= render 'rds_configuration', resource_type: ResourceType.find_by_resource_class('RDS') %>

<!-- ELB resource  -->
<%= render 'elb_configuration', resource_type: ResourceType.find_by_resource_class('ELB') %>

<!-- S3 resource  -->
<%= render 's3_configuration', resource_type: ResourceType.find_by_resource_class('S3') %>

<!-- ElastiCache resource  -->
<%= render 'elasticache_configuration', resource_type: ResourceType.find_by_resource_class('ElastiCache') %>